@model BusinessObjectLayer.EvaluationManagement

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Evaluations</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Delete Evaluation Item
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Are you sure you want to delete this?</h3>
                            <div>
                                <h4>Evaluation</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Question.Question1)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Question.Question1)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Question.AnswerType.AnswerType1)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Question.AnswerType.AnswerType1)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.IsCompulsory)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.IsCompulsory)
                                    </dd>
                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(r => r.EvaluationManagementId)
                                    @Html.HiddenFor(r=>r.EvaluationId)

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
