@model ORES.ViewModels.EvaluationManagementViewModel

@{
    ViewBag.Title = "Design Evaluation Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Evaluations</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Design Evaluation Form
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table">
                                <tr>
                                    <th>
                                        Question
                                    </th>
                                    <th>
                                        Answer Type
                                    </th>
                                    <th>
                                        Is Compulsory
                                    </th>

                                    <th></th>
                                </tr>

                                @foreach (var item in Model.EvaluationMangementList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Question.Question1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Question.AnswerType.AnswerType1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsCompulsory)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Remove", "DeleteEvaluationManagement", new { id = item.EvaluationManagementId })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.col-lg-12 -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    Add Question(s)
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.EvaluationMangement.QuestionId, "Question", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(x => x.SelectedQuestion, Model.QuestionList, "Select a Question", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SelectedQuestion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.EvaluationMangement.IsCompulsory, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="btn-group" data-toggle="buttons">
                                                <label class="btn btn-primary active">
                                                    @Html.RadioButtonFor(model => model.EvaluationMangement.IsCompulsory, "True", new { @id = "rbYes", @Checked = "checked" })
                                                    @Html.Label("rbYes", "Yes")
                                                </label>
                                                <label class="btn btn-primary">
                                                    @Html.RadioButtonFor(model => model.EvaluationMangement.IsCompulsory, "false", new { @id = "rbNo" })
                                                    @Html.Label("rbNo", "No")
                                                </label>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.EvaluationMangement.IsCompulsory, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @Html.HiddenFor(r => r.EvaluationId)
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Add Question" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }            
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
                
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            <br/>
        </div>
    </div>
</div>


